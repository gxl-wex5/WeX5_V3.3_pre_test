/**
	@name org.apache.cordova.media
	@class 
	@description 媒体文件处理插件
	@model Native
	@category EventClass
	@declareVar window.Media
*/

/**
	@name org.apache.cordova.media#getCurrentPosition
	@function
	@param {Function} success 请求成功的回调
	@param {Function} fail 请求失败的回调
	@returns {void}
	@description 返回音频文件的当前路径
*/

/**
	@name org.apache.cordova.media#getDuration
	@function
	@returns {Number}
	@description 返回音频的播放时间，没有值返回，则返回-1
*/

/**
	@name org.apache.cordova.media#pause
	@function
	@returns {void}
	@description 暂停
*/

/**
	@name org.apache.cordova.media#play
	@function
	@returns {void}
	@description 播放
*/

/**
	@name org.apache.cordova.media#release
	@function
	@returns {void}
	@description 释放底层操作系统的音频资源
*/

/**
	@name org.apache.cordova.media#seekTo
	@function
	@param {integer} milliseconds 重新播放位置的毫秒数
