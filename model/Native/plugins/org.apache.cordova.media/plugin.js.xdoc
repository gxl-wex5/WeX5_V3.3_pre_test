	@description 设置重新播放的位置
*/

/**
	@name org.apache.cordova.media#setVolume
	@function
	@param {decimal}音量大小，取值范围：0.0-1.0
	@returns {void}
	@description 设置音量
*/

/**
	@name org.apache.cordova.media#startRecord
	@function
	@returns {void}
	@description 录制音频文件
*/

/**
	@name org.apache.cordova.media#stop
	@function
	@returns {void}
	@description 停止播放音频文件
*/

/**
	@name org.apache.cordova.media#stopRecord
 	@function
 	@returns {void}
 	@description 停止录制音频文件
